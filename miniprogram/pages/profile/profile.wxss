
page {
  background: #f1f1f1; 
}
.profile-header {
  background-color: rgb(212, 60, 51);
  width: 100%;
  height: 400rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #fff;
  font-size: 32rpx;
}

.avatar-url {
  overflow:hidden;
  display: block;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 2px solid #fff;
}

.nav {
  padding: 30px;
}

.nav-item {
  line-height: 100rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.nav-item .content {
  display: flex;
  align-items: center;
}

.iconfont {
  font-size: 40rpx;
  font-weight: bold;
  color: #d43c33;
  margin-right: 20rpx;
}


.nav-item .text {
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.7)
}

.icon-youjiantou {
  flex: 1;
  text-align: right;
}