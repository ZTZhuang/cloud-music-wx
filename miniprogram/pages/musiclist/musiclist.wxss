.detail-container {
  height: 320rpx;
  filter: blur(40rpx);
  opacity: 0.4; 
}

.detail-mask {
  position: absolute;
  width: 100%;
  height: 320rpx;
  background-color: rgb(119, 117, 117);
  top: 0;
  left: 0;
  z-index: -1;
}

.detail-info {
  display: flex;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 320rpx;
  padding: 40rpx;
  box-sizing: border-box;
  align-items: center;
}

.detail-img {
  width: 250rpx;
  height: 250rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}

.detail {
  flex-grow: 1;
  line-height: 40rpx;
  width: 10%;
}

.detail-name {
  color: #fff;
  font-size: 30rpx;
  font-weight: 350;
}